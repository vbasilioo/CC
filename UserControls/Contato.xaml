<UserControl x:Class="CC.UserControls.Contato"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CC.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="340" >
    <Grid>
        <Button Background="DarkOliveGreen"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Height="40" Width="334" BorderBrush="{x:Null}">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <Grid HorizontalAlignment="Left" VerticalAlignment="Center" Height="74" Width="381">
                <TextBlock x:Name="Nome" Foreground="White" Text="Nome" FontSize="16" Margin="75,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left">
                </TextBlock>
            </Grid>
        </Button>
    </Grid>
</UserControl>
