<UserControl x:Class="CC.UserControls.GestaoControle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:uc="clr-namespace:CC.UserControls"
        Height="790" Width="1150" MinWidth="1150" MinHeight="790" Background="Transparent">

    <Border CornerRadius="7" Background="#ffffff">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="5" Direction="-130" Opacity="0.1" />
        </Border.Effect>
        <Grid Margin="20 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--TÍTULO-->
            <StackPanel Orientation="Horizontal" Margin="20 20 0 0">
                <TextBlock x:Name="lblDetalhes" Text="Detalhes" Foreground="#374655" FontSize="18" Margin="15 0 0 0" VerticalAlignment="Center" />
                <TextBlock x:Name="lblSucessoCadastro" Text="Vaga cadastrada com sucesso!" Foreground="Green" FontSize="16" Margin="-70 0 0 0" VerticalAlignment="Center" Visibility="Collapsed" />
                <TextBlock x:Name="lblErroSalario" Text="Salário inválido." Foreground="Red" FontSize="16" Margin="-70 0 0 0" VerticalAlignment="Center" Visibility="Collapsed" />
                <TextBlock x:Name="lblErroCNPJ" Text="CNPJ inválido." Foreground="Green" FontSize="16" Margin="-70 0 0 0" VerticalAlignment="Center" Visibility="Collapsed" />
            </StackPanel>

            <!--CAMPOS-->
            <uc:MyTextBox x:Name="txtTitulo" Grid.Column="0" Grid.Row="2" Caption="Título da Vaga" />
            <uc:MyTextBox x:Name="txtDescricao" Grid.Column="0" Grid.Row="3" Caption="Descrição da Vaga" />
            <uc:MyTextBox x:Name="txtSalario" Grid.Column="0" Grid.Row="4" Caption="Salário" />
            <uc:MyTextBox x:Name="txtRequisitos" Grid.Column="1" Grid.Row="2" Caption="Requisitos" />
            <uc:MyTextBox x:Name="txtNomeempresa" Grid.Column="1" Grid.Row="3" Caption="Empresa" />
            <uc:MyTextBox x:Name="txtStatus" Grid.Column="1" Grid.Row="4" Caption="Status" Hint="Aberta ou Fechada" />

            <!--BOTÃO DE ENVIAR-->
            <Border Grid.Row="6" Grid.ColumnSpan="2" Height="80" Background="#f6f6f6" CornerRadius="0 0 10 10" Margin="-20 40 -20 0" />
            <!--MAIN-->
            <Button Grid.Column="1" Grid.Row="6" Content="Salvar" Margin="0 40 20 0" HorizontalAlignment="Right" Style="{StaticResource Mainbutton}" Click="Button_Click_1">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="5" Color="#f18047" Opacity="0.3" Direction="-120" />
                </Button.Effect>
            </Button>
        </Grid>
    </Border>
</UserControl>
